# http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[{package.json,.travis.yml,.nycrc,.babelrc,.all-contributorsrc}]
indent_style = space
indent_size = 2

[*.hjson]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
